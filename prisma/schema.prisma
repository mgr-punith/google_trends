generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  password      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  keywords      Keyword[]
  alerts        Alert[]
  notifications Notification[]

  @@index([email])
}

model Keyword {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  term      String
  tags      String[] @default([])
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trendData TrendData[]
  alerts    Alert[]
}

model TrendData {
  id        String   @id @default(uuid()) @db.Uuid
  keyword   Keyword  @relation(fields: [keywordId], references: [id], onDelete: Cascade)
  keywordId String
  timestamp DateTime @default(now())
  value     Float
  related   String[] @default([])
  createdAt DateTime @default(now())

  @@unique([keywordId, timestamp])
  @@index([keywordId, timestamp])
}

model Alert {
  id            String         @id @default(cuid())
  user          User           @relation(fields: [userId], references: [id])
  userId        String
  keyword       Keyword        @relation(fields: [keywordId], references: [id], onDelete: Cascade)
  keywordId     String
  frequency     String         @default("realtime") // realtime|hourly|daily
  thresholdPct  Float? // percent change threshold
  thresholdAbs  Float? // absolute value threshold
  channels      String[]       @default([]) // email, sms, push, webhook
  lastSentAt    DateTime?
  priority      String         @default("medium") // low|medium|high|critical
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]

  @@index([userId])
  @@index([keywordId])
}

model Notification {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  alert     Alert?   @relation(fields: [alertId], references: [id])
  alertId   String?
  type      String // email | sms | push | webhook
  channelId String? // e.g., twilio sid or sendgrid id
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, read])
}
